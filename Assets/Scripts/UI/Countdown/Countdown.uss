.hidden {
    transition-property: all;
    transition-duration: 0.7s;
    opacity: 0;
}

.displayed {
    transition-duration: 0.3s;
    transition-property: all;
    position: relative;
    opacity: 1;
}

.digit {
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    font-size: 250px;
    color: rgb(255, 255, 255);
    position: absolute;
}
